{% block body %}
    <h1>Détail de la session</h1><br>
   
        <h2> {{ session.denomination }} </h2>
        <p>
        Date de début : {{ session.dateDebut|date("d m Y") }} <br>
        Date de fin : {{ session.dateFin|date("d m Y") }} <br>
        Nombre de places maximale : {{ session.nombrePlaceMax }} <br> 
        Nombre de places restantes : {{session.getPlacesRestantes}} <br>
        {# Matières programmées : {{ session.programmes}} #}
