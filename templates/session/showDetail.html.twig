        {# {{session.stagiaires | length}} #}
        {# {{ session.nombrePlaceMax - session.stagiaires | length}} #}
        {# {{ dump(session.stagiaires) }} #}
        </p>

        <h3>Stagiaires inscrits :</h3>
        <p>
        {% for stagiaire in session.stagiaires %}
            - {{ stagiaire }} <br>
        {% endfor %}
        </p>

        <h3>Matières programmées :</h3>
        <p>
        {% for matiere in session.programmes %}
            - {{ matiere }} <br>
        {% endfor %}
        </p>

{% endblock %}
