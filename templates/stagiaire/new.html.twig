{% extends 'base.html.twig' %}

{% block title %}Ajouter un stagiaire{% endblock %}

{% block body %}
    {# si edit (est vrai cad qu'il y a un id donc stagiaire existant) #}
    {% if edit %}
        <h1>Editer un stagiaire</h1><br>
    {% else %}
        <h1>Ajouter un stagiaire</h1><br>  
    {% endif %}

    {{ form_start(formAddStagiaire) }}
        {# gestion des affichage par ligne qui regroupe des "colones" automatique selon le nombre d'éléments #}
        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddStagiaire.prenom) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddStagiaire.nom) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddStagiaire.genre) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddStagiaire.dateNaissance) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddStagiaire.ville) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddStagiaire.email) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddStagiaire.telephone) }}
            </div>
        </div>
        <div class="mt-3">
        {{ form_row(formAddStagiaire.Valider) }}
        </div>
        
    {{ form_end(formAddStagiaire) }}

{% endblock %}