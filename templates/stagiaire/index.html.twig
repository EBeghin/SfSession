{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires{% endblock %}

{% block body %}
    <h2>Listes des stagiaires</h2><br>

    {% for stagiaire in stagiaires %}
    <div class="row">
        <div class="col-sm">
            <a href="{{ path('showDetail_stagiaire', {'id': stagiaire.id}) }}"> {{ stagiaire }}</a>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="col-sm">
            <a class = "btn btn-primary btn-sm" href="{{ path('edit_stagiaire', {'id': stagiaire.id}) }}">Edition</a>
            <a class = "btn btn-primary btn-sm" href="{{ path('delete_stagiaire', {'id': stagiaire.id}) }}">Supprimer</a><br><br>
        </div>
        <div class="col-sm"></div>
        <div class="col-sm"></div>
        {% endif  %}
    </div>

        
    {% endfor %}

{% endblock %}
